# Docker-specific environment variables
# Этот файл содержит переменные окружения для Docker окружения

# === ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ ===
# Скопируйте и настройте эти значения из вашего основного .env файла
BOT_TOKEN=your_telegram_bot_token_here
FACEIT_API_KEY=your_faceit_api_key_here

# === ОПЦИОНАЛЬНЫЕ ПАРАМЕТРЫ ===

# Режим отладки
DEBUG=false

# Уровень логирования
LOG_LEVEL=INFO

# URL для webhook уведомлений FACEIT
WEBHOOK_URL=https://yourdomain.com/webhook/faceit

# === ПРОИЗВОДИТЕЛЬНОСТЬ И КЭШИРОВАНИЕ ===

# Время жизни кэша в секундах (по умолчанию 5 минут)
CACHE_TTL=300

# Максимальное количество пользовательских сессий
MAX_SESSIONS=1000

# Интервал очистки кэша в секундах (по умолчанию 1 час)
CLEANUP_INTERVAL=3600

# === МОНИТОРИНГ И HEALTH CHECKS ===

# Интервал health check в секундах
HEALTH_CHECK_INTERVAL=30

# Включение метрик Prometheus
METRICS_ENABLED=false

# === БЕЗОПАСНОСТЬ ===

# Максимальное количество запросов в минуту на пользователя
RATE_LIMIT_PER_USER=60

# Максимальное количество API запросов в час
API_RATE_LIMIT=1000

# === ИНТЕГРАЦИЯ С ВНЕШНИМИ СЕРВИСАМИ ===

# URL для отправки уведомлений о развертывании (Slack, Discord, и т.д.)
WEBHOOK_DEPLOY_URL=

# URL для отправки уведомлений о backup (Slack, Discord, и т.д.)
BACKUP_WEBHOOK_URL=

# === DOCKER СПЕЦИФИЧНЫЕ НАСТРОЙКИ ===

# Имя Docker сети
DOCKER_NETWORK=faceit-network

# Имя проекта Docker Compose
COMPOSE_PROJECT_NAME=faceit-cs2-bot

# Тег Docker образа
DOCKER_IMAGE_TAG=latest

# === БАЗА ДАННЫХ (для будущих версий) ===

# Настройки PostgreSQL (если будет использоваться в будущем)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=faceit_bot
POSTGRES_USER=faceit_user
POSTGRES_PASSWORD=

# Настройки Redis (если будет использоваться для кэширования)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === НАСТРОЙКИ NGINX (для продакшена) ===

# Домен для SSL сертификатов
DOMAIN=yourdomain.com

# Email для Let's Encrypt
LETSENCRYPT_EMAIL=admin@yourdomain.com

# === МОНИТОРИНГ ===

# Настройки для интеграции с системами мониторинга
SENTRY_DSN=
PROMETHEUS_PUSHGATEWAY_URL=

# === РЕЗЕРВНОЕ КОПИРОВАНИЕ ===

# Директория для backup файлов
BACKUP_DIR=/opt/backups/faceit-cs2-bot

# Количество дней для хранения backup'ов
BACKUP_RETENTION_DAYS=30

# S3 настройки для облачного backup (опционально)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# === DEVELOPMENT НАСТРОЙКИ ===
# Эти переменные используются только в development режиме

# Включение hot-reload для development
RELOAD=true

# Включение детального логирования для отладки
VERBOSE_LOGGING=true

# Отключение SSL проверки для development (НИКОГДА не используйте в продакшене!)
SSL_VERIFY=true

# === ПРОДАКШЕН НАСТРОЙКИ ===
# Эти переменные используются только в production режиме

# Количество worker процессов
WORKERS=1

# Максимальное количество соединений
MAX_CONNECTIONS=1000

# Таймаут для запросов в секундах
REQUEST_TIMEOUT=30

# === TELEGRAM BOT НАСТРОЙКИ ===

# Режим работы бота (polling или webhook)
BOT_MODE=polling

# URL для Telegram webhook (если используется)
TELEGRAM_WEBHOOK_URL=

# Путь для webhook endpoint
WEBHOOK_PATH=/webhook/telegram

# === FACEIT API НАСТРОЙКИ ===

# Базовый URL FACEIT API (обычно не нужно изменять)
FACEIT_API_BASE_URL=https://open.faceit.com/data/v4

# Таймаут для FACEIT API запросов в секундах
FACEIT_API_TIMEOUT=30

# Максимальное количество retry попыток
FACEIT_API_MAX_RETRIES=3

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===

# Временная зона
TZ=UTC

# Язык по умолчанию
DEFAULT_LANGUAGE=ru

# Включение аналитики (анонимной)
ANALYTICS_ENABLED=false

# === ПРИМЕЧАНИЯ ===
# 
# 1. Никогда не коммитьте этот файл с реальными API ключами в Git
# 2. Используйте сильные пароли для всех сервисов
# 3. В продакшене отключите DEBUG режим
# 4. Регулярно ротируйте API ключи
# 5. Мониторьте логи на предмет подозрительной активности
#
# Для получения API ключей:
# - Telegram Bot Token: https://t.me/botfather
# - FACEIT API Key: https://developers.faceit.com